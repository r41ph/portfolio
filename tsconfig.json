{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["frontend/*", ".eslintrc.cjs", "backend/*", "types/*", "scripts/*", "*.spec.ts"],
  "exclude": ["node_modules", "dist"]
}